<form action="/books/<%= data.id %>?_method=PUT" method="POST" name="updateForm">
  <input type="hidden" name="author" value="<%= data.authors %>">
  <input type="hidden" name="title" value="<%= data.title %>">
  <input type="hidden" name="img" value="<%= data.img_url %>">
  <input type="hidden" name="description" value="<%= data.desc %>">
  <input type="hidden" name="isbn" value="<%= data.isbn %>">
  <input type="hidden" name="bookshelf" value="<%= data.bookshelf %>">
</form>